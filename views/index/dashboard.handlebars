<div class="container">
  <h1>Witaj {{user.firstName}}</h1><br />
  <h4>Twoje zgłoszenia: </h4>
  {{#if requests}}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Tytuł</th>
          <th scope="col">Kategoria</th>
          <th scope="col">Data</th>
          <th scope="col">Status</th>
          <th scope="col"></th>

        </tr>
      </thead>
      <tbody>
        {{#each requests}}
          <tr>
            <td><a style="color: white;" href="/requests/show/{{id}}"><p>{{title}}</p></a></td>
            <td>{{category}}</td>
            <td>{{formatDate date 'LLL'}}</td>
            <td>Nieznany</td>
            <td><a class="btn btn-info btn-sm" href="/requests/edit/{{id}}"><i class="fa fa-pencil"></i> Edytuj</a>
              <form action="/requests/{{id}}?_method=DELETE" method="post" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-delete btn-sm"><i class="fa fa-close">Usuń</i></button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>Nie utworzyłeś jeszcze żadnych zgłoszeń.</p>
  {{/if}}
</div>
